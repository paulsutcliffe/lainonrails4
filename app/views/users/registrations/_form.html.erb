<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, :autofocus => true %>
    <%= f.input :last_name %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :gender, collection: ["Masculino", "Femenino"] %>
    <%= f.input :age %>
    <%= f.input :phone %>
    <%= f.input :country_id, collection: Country.all.map{|c| [c.name, c.id]} %>
    <%= f.input :height %>
    <%= f.input :weight %>
    <%= f.input :smoker, wrapper_html: {class: "col-md-12"} %>
    <%= f.input :hobbies %>
    <%= f.input :dieted, wrapper_html: {class: "col-md-12"} %>
    <%= f.input :place_of_diet %>
    <%= f.input :password, required: true %>
    <%= f.input :password_confirmation, required: true %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
