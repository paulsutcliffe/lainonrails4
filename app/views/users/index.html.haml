%h3 Usuarios
.span8
  %table.table.table-condensed
    %thead
      %tr
        %th First name
        %th Last name
        %th Email
        %th Registered
        %th Country
        %th Role
        %th
        %th
    %tbody
      - @users.each do |user|
        %tr
          %td= link_to user.first_name, user
          %td= link_to user.last_name, user
          %td= user.email
          %td= user.created_at.to_date
          %td= user.country_id
          %td= user.roles.first.name.titleize unless user.roles.first.nil?
          %td
            %a.btn.btn-mini{"data-toggle" => "modal", :href => "#role-options-#{user.id}", :type => "button"} Change role
            = render user
          - if current_user.has_role? :admin
            %td= link_to("Eliminar usuario", user_path(user), :data => { :confirm => "Â¿EstÃ¡ seguro?" }, :method => :delete, :class => 'btn btn-mini btn-danger') unless user == current_user
