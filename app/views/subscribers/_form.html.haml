= simple_form_for(@subscriber) do |f|
  = render 'layouts/error_messages', :target => f.object

  .form-inputs
    = f.input :first_name
    = f.input :last_name
    = f.input :email
    = f.input :phone
    = content_tag :label, class: 'check_box' do
      = f.check_box :privacy_policy
      He leído y estoy de acuerdo con las
      = link_to page_path(1), target: "_blank", class: ''  do
        Políticas de Privacidad de LAIN
        %i.icon-external-link

  .form-actions
    = f.button :submit
