= simple_form_for(@banner) do |f|
  = render 'layouts/error_messages', :target => f.object

  .form-inputs
    = f.input :name
    = f.input :location, :collection => Banner::LOCATIONS.map{|k, v| [k, v]}
    = f.input :image
    = image_tag @banner.image.thumb if @banner.image.present?
    = f.input :link

  .form-actions
    = f.button :submit
