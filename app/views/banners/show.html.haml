#section-banners.container
  .section
    .section-title
      %h1= page_title!('banner')

  .section
    %p
      %b Name:
      = @banner.name
    %p
      %b Location:
      = @banner.location
    %p
      %b Link:
      = @banner.link
    %p
      %b Country:
      = @banner.country
    %p
      %b Image:
      = image_tag @banner.image.larger
      = image_tag @banner.image.medium
      = image_tag @banner.image.small

  .section
    - if current_admin
      .admin-controls
        = link_to 'crud.edit', edit_banner_path(@banner), class: 'btn btn-info'
    = link_to 'crud.back', banners_path, class: 'btn btn-warning'
