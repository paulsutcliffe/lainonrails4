#section-products.container
  .title-page
    %h3= page_title!('Products - ' +  @product.name)

  .section-show
    .section-imagen
      = image_tag @product.image.detail

    .section-descrip
      = raw(@product.description)

    =link_to "Volver", products_path, class:'btn-back'
    -#%p
      %b Videos:
      = @product.video1
      = @product.video2
      = @product.video3

  .section
    - if current_admin
      .admin-controls
        = link_to 'crud.edit', edit_product_path(@product), class: 'btn btn-info'
    =# link_to 'crud.back', products_path, class: 'btn btn-warning'

= render 'layouts/llama_ya'
= render 'layouts/categories'

= render 'layouts/footer'

