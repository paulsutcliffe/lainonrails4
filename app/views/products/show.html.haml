#section-products.container
  .section
    .section-title
      %h1= page_title!('product')

  .section
    %p
      %b Name:
      = @product.name
    %p
      %b Description:
      = @product.description
    %p
      %b Videos:
      = @product.video1
      = @product.video2
      = @product.video3
    %p
      %b Image:
      = image_tag @product.image.detail

  .section
    - if current_admin
      .admin-controls
        = link_to 'crud.edit', edit_product_path(@product), class: 'btn btn-info'
    = link_to 'crud.back', products_path, class: 'btn btn-warning'
