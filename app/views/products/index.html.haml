#section-products.container
  .title
    %h1= page_title!('products')

  .section
    - if current_admin
      .admin-control
        = link_to I18n.t('crud.new') + ' ' + 'Product', new_product_path, class: 'btn btn-primary'

    .table-responsive
      %table.table
        %tr
          %th Name
          %th Description
          %th Video1
          %th Video2
          %th Video3
          %th Image
          %th
          %th
          %th

        - @products.each do |product|
          %tr
            %td= product.name
            %td= product.description
            %td= product.video1
            %td= product.video2
            %td= product.video3
            %td= image_tag product.image.listing
            %td= link_to 'crud.show', product, class: 'btn btn-default'
            - if current_admin
              %td= link_to 'crud.edit', edit_product_path(product), class: 'btn btn-info'
              %td= link_to 'crud.delete', product, :method => :delete, :data => { :confirm => 'crud.are-you-sure' }, class: 'btn btn-danger'
