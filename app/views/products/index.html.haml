#section-products.container

.title
  %h2
    = page_title!('products')

    .seccion-info
      - if current_admin
        .admin-control
          = link_to I18n.t('crud.new') + ' ' + 'Product', new_product_path, class: 'btn btn-primary'

    .table-responsive
      %table.table
        %tr
          %th Title
          %th Description
          %th Sub-title
          %th
          %th
          %th

        - @products.each do |product|
          %tr
            %td= product.title
            %td= product.description
            %td= product.sub-title
            %td= link_to I18n.t('crud.show'), product, class: 'btn btn-default'
            - if current_admin
              %td= link_to I18n.t('crud.edit'), edit_product_path(product), class: 'btn btn-info'
              %td= link_to I18n.t('crud.delete'), product, :method => :delete, :data => { :confirm => I18n.t('crud.are-you-sure') }, class: 'btn btn-danger'
