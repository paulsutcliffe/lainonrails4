#section-products.container
  .title-page
    %h3= page_title!('LAIN - Productos')

  .section-products
    - if current_admin
      .admin-control
        = link_to I18n.t('crud.new') + ' ' + 'Product', new_product_path, class: 'btn btn-primary'
      %br
    - @products.each do |product|
      = link_to product do 
        .product-img{style: "background-image: url(#{product.image.listing}); width: 158px; height: 170px; background-repeat: no-repeat;" }
          .product-txt
            = product.name
          - if current_admin
            = link_to 'edit', edit_product_path(product), class: 'btn btn-info'
            = link_to 'delete', product, :method => :delete, :data => { :confirm => 'crud.are-you-sure' }, class: 'btn btn-danger'

= render 'layouts/llama_ya' 

= render 'layouts/categories' 

= render 'layouts/footer'
