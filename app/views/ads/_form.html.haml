= form_for @ad, :html => { class: 'form-horizontal', role: 'form' } do |f|
  = render 'layouts/error_messages', :target => f.object

  .form-group
    = f.label :ad, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :ad, class: 'form-control'
  .actions
    = f.submit 'Guardar', class: 'btn btn-default'
