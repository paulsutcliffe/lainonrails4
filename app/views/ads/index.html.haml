#region-ads.container

  .region
    .region-title
      %h1= page_title!('ads')

    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Ad', new_ad_path, class: 'btn btn-primary'

      .table-responsive
        %table.table
          %tr
            %th Ad
            %th
            %th
            %th

          - @ads.each do |ad|
            %tr
              %td= ad.ad
              %td= link_to 'Ver', ad, class: 'btn btn-info'
              - if current_admin
                %td= link_to 'Editar', edit_ad_path(ad), class: 'btn btn-success'
                %td= link_to 'Eliminar', ad, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
