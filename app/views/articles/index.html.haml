#section-articles.container
  .title-page
    %h3= page_title!('LAIN-Blog')

  .section
    - if current_admin
      .admin-control
        = link_to I18n.t('crud.new') + ' ' + 'Article', new_article_path, class: 'btn btn-primary'

  - @articles.each do |article|
    .section-articles
      .section-article-img
        = image_tag article.image.listing, class: 'img-responsive img-circle'
      .section-article-info
        %p
          = article.title
        %p
          = article.content
        .btn-verde-2
          = link_to 'Leer mÃ¡s', article
      - if current_admin
        = link_to 'edit', edit_article_path(article), class: 'btn btn-info'
        = link_to 'delete', article, :method => :delete, :data => { :confirm => 'crud.are-you-sure' }, class: 'btn btn-danger'

%br
= paginate @articles
%br


= render 'layouts/llama_ya'

.container
  .section
    .section-images
      = image_tag(image_path('sec-img1.png'), class:'img-responsive')
      = image_tag(image_path('blog-img6.png'), class:'img-responsive')
      = image_tag(image_path('sec-img2.png'), class:'img-responsive')
      = image_tag(image_path('sec-img3.png'), class:'img-responsive')
      = image_tag(image_path('sec-img4.png'), class:'img-responsive')

= render 'layouts/footer'
