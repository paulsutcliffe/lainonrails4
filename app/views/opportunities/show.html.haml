#section-opportunities.container
  .section
    .section-title
      %h1= page_title!('opportunity')

  .section
    %p
      %b Title:
      = @opportunity.title
    %p
      %b Description:
      = @opportunity.description
    %p
      %b Image:
      = @opportunity.image
    %p
      %b Active:
      = @opportunity.active

  .section
    - if current_admin
      .admin-controls
        = link_to 'crud.edit', edit_opportunity_path(@opportunity), class: 'btn btn-info'
    = link_to 'crud.back', opportunities_path, class: 'btn btn-warning'
